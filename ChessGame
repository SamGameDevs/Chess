#include<iostream>
#include<string>
using namespace std;

int letToNum(char n)
{
    int num = n - 97;
    if (num > -1)
    {
        return(num);
    }
    else
    {
        return(-1);
    }
}

char board [8][8]=
{
    {'r', 'n', 'b','q','k','b','n','r',},
    {'p', 'p', 'p','p','p','p','p','p',},
    {' ', ' ', ' ',' ',' ',' ',' ',' ',},
    {' ', ' ', ' ',' ',' ',' ',' ',' ',},
    {' ', ' ', ' ',' ',' ',' ',' ',' ',},
    {' ', ' ', ' ',' ',' ',' ',' ',' ',},
    {'P', 'P', 'P','P','P','P','P','P',},
    {'R', 'N', 'B','Q','K','B','N','R',}
};

void BoardPrint()
{
    cout << "   a   b   c   d   e   f   g   h " << endl;
    cout << "  " << "   |   |   |   |   |   |   |      " << endl;
    for (int i = 0; i < 7; i++)
    {
    cout << i+1 << "  " << board[i][0] << " | " << board[i][1] << " | " << board[i][2] << " | " << board[i][3] << " | " << board[i][4] << " | " << board[i][5] << " | " << board[i][6] << " | " << board[i][7] << endl;
    cout << "  " << "___|___|___|___|___|___|___|___" << endl;
    cout << "  " << "   |   |   |   |   |   |   |      " << endl;
    }
    cout << "8  " << board[7][0] << " | " << board[7][1] << " | " << board[7][2] << " | " << board[7][3] << " | " << board[7][4] << " | " << board[7][5] << " | " << board[7][6] << " | " << board[7][7] << endl;
    cout << "  " << "   |   |   |   |   |   |   |      " << endl;
}

int main()
{
    char playPieceLet = ' ';
    int playPieceNum = ' ';
    int numSpaces = ' ';
    char dirLR = ' ';
    char dirUD = ' ';
    char diaInput = ' ';
    int a = 'a';

    while(true)
    {
        BoardPrint();
        cout << "What peice would you like to move (enter coordinates formatted as letter, number)";
        cin >> playPieceLet >> playPieceNum;
        board[playPieceNum-1][letToNum(playPieceLet)]= 'test';
        cin.clear(); //clears error flags
        cin.ignore(10000, '\n'); //discards values

        if (diaInput = 'y')
        {
            bool dia = true;
        }
        else if (diaInput = 'n')
        {
            bool dia = false;
        }
        else
        {
            cout << "Not A valid Diagonal Choice, please enter y or n";
        }
        
    }
}
